{
  "name": "ОЗВУЧИТЬ ТЕКСТ",
  "description": "Озвучивает выбранный текст",
  "version": "0.5",
  "permissions": [
    "tts",
    "contextMenus",
    "pageCapture",
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.min.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": ["jwerty.js", "include.min.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "unnamed.png",
    "48": "unnamed.png",
    "128": "unnamed.png"
  },
  "manifest_version": 2
}